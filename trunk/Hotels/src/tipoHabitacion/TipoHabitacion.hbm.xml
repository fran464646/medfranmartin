<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="tipoHabitacion.TipoHabitacion" table="tipoHabitacion">
        <id column="id" name="id" type="java.lang.Long" />
        <property column="idHotel" name="idHotel" type="java.lang.Long" />
        <property column="nombre" name="nombre" type="java.lang.String" />
        <property column="capacidad" name="capacidad" type="java.lang.Integer" />
        <property column="tamano" name="tamano" type="java.lang.Integer" />
        <property column="tipoCama" name="tipoCama" type="java.lang.String" />
        <property column="oferta" name="oferta" type="java.lang.Boolean" />
    </class>
</hibernate-mapping>